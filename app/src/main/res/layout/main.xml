<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日程管理专家"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:background="@drawable/title"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp">
        <ImageButton
            android:id="@+id/ibmainNew"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/newone"/>
        <ImageButton
            android:id="@+id/ibmainDel"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/delete"/>
        <ImageButton
            android:id="@+id/ibmainCheck"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/check"/>
        <ImageButton
            android:id="@+id/ibmainEdit"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/edit"/>
        <ImageButton
            android:id="@+id/ibmainDelAll"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/deleteall"/>
        <ImageButton
            android:id="@+id/ibmainSearch"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/search"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="已有日程"
        android:textColor="#303030"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lvmainSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darker"/>
    </LinearLayout>

</LinearLayout>
